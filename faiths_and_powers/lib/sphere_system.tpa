		END
	  IF_EXISTS BUT_ONLY
	  COPY_EXISTING ~%sphere%.spl~ ~override~ 
		LPF CLONE_EFFECT INT_VAR match_opcode=171 STR_VAR match_resource=~SPWI101~ resource = EVAL ~%priest_res%~ END
	  IF_EXISTS BUT_ONLY
